---
import { getCollection } from 'astro:content';
import WorksLayout from '../../layouts/WorksLayout.astro';

const CATEGORY_ORDER = [
  'Motion picture',
  'Information design',
  'Graphic design',
  'D+programing',
] as const;

type Category = (typeof CATEGORY_ORDER)[number];

const allWorks = await getCollection('works');

const grouped = Object.fromEntries(
  CATEGORY_ORDER.map((cat) => [
    cat,
    allWorks
      .filter((w) => w.data.category === cat)
      .sort((a, b) => a.data.order - b.data.order),
  ])
) as Record<Category, typeof allWorks>;
---

<WorksLayout title="YCN Works">
  <div class="works-index">
    {
      CATEGORY_ORDER.map((cat) => (
        <section class="category-section">
          <h2 class="category-heading">{cat}</h2>
          <ul class="works-list">
            {grouped[cat].map((work) => (
              <li class="works-item">
                <a href={`/works/${work.id}/`} class="works-link">
                  {work.data.title}
                </a>
              </li>
            ))}
          </ul>
        </section>
      ))
    }
  </div>
</WorksLayout>

<style>
  .works-index {
    padding-top: 0.25rem;
  }

  .category-section {
    margin-bottom: 2rem;
  }

  .category-heading {
    font-size: 0.65rem;
    font-weight: 700;
    color: var(--color-muted);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin: 0 0 0.6rem 0;
  }

  .works-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .works-item {
    margin-bottom: 0.2rem;
  }

  .works-link {
    color: var(--color-text);
    text-decoration: none;
    font-size: 0.9rem;
    line-height: 1.5;
    display: inline-block;
    padding: 0.05rem 0;
  }

  .works-link:hover {
    color: var(--color-accent);
  }
</style>
