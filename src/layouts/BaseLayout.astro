---
import '../styles/global.css';
import Sidebar from '../components/Sidebar.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
}

const { title = 'Limitist:Log' } = Astro.props;
---

<!doctype html>
<html lang="ko">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="site-wrapper">
      <header class="site-header">
        <h1 class="site-title"><a href="/">Limitist:Log</a></h1>
      </header>

      <div class="site-grid">
        <Sidebar />

        <main class="site-content">
          <slot />
          <Footer />
        </main>
      </div>
    </div>
  </body>
</html>

<style>
  body {
    margin: 0;
    padding: 0;
    background-color: var(--color-bg);
    color: var(--color-text);
  }

  .site-wrapper {
    max-width: 720px;
    margin: 0 auto;
    padding: 1rem;
  }

  .site-header {
    margin-bottom: 1rem;
  }

  .site-title {
    font-size: 2rem;
    margin: 0;
  }

  .site-title a {
    color: inherit;
    text-decoration: none;
  }

  .site-title a:hover {
    color: var(--color-accent);
  }

  .site-grid {
    display: grid;
    grid-template-columns: 160px 1fr;
    gap: 1.5rem;
    align-items: start;
  }

  .site-content {
    max-width: 425px;
  }

  @media (max-width: 768px) {
    .site-grid {
      grid-template-columns: 1fr;
    }

    .site-content {
      max-width: 100%;
    }
  }
</style>
